extend ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3 
    .row 
      .col-12 
        +box-head(pageTitle)
    
    ul 
      each item in books 
        .col-6.mb-3 
          div(class="book-item")
            div(class="inner-image")
              a(href=`/books/detail/${item.id}`) 
                img(src=item.thumbnail, alt=item.title) 
            div(class="inner-content")
              div(class="inner-title")
                a(href=`/books/detail/${item.id}`) #{item.title}
              div(class="inner-publisher") <i class="fa-solid fa-pen"></i> #{item.publisher}
              div(class="inner-read") <i class="fa-solid fa-book"></i> #{item.purchase}
