extend ../../layouts/default.pug

block main 
  if(topic.title)
    h1(class="mb-4") #{topic.title}
  
  if(topic.thumbnail)
    img(
      src=topic.thumbnail 
      style="width: 100px"
    )

  if(topic.status)
    div(class="mb-4")
      span Trạng thái 
      if(topic.status == "active")
        span(class="badge badge-success") Hoạt động
      else 
        span(class="badge badge-danger") Dừng hoạt động 

  if(topic.description)
    div(class="mb-4" topic-desc) !{topic.description}

  a(
    href=`/${prefixAdmin}/topics/edit/${topic.id}`
    type="submit"
    class="btn btn-warning"
  ) Chỉnh sửa