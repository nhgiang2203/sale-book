extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  div(
    class="alert alert-success alert-hidden"
    alert-add-cart-success
  ) Đã thêm vào giỏ hàng <span close-alert>x</span>

  .book-detail
    .container.my-3
      .row
        .col-6
          .inner-image
            img(src=book.thumbnail)
        .col-6
          .inner-title #{book.title}
        
          div(class="inner-read") <i class="fa-solid fa-book-open-reader"></i> #{book.purchase}

          each item in book.typeBook 
            form(
              form-format
              book-id=`${book.id}`
            )
              .radio-container
                input(
                  type="radio"
                  id=`format-${item}`
                  name="format"
                  value=(item == "softcover" ? "softcover" : "hardcover")
                  onchange="radioChange(this)"
                )
                label.radio-label(for=`format-${item}`) 
                  | #{item === "softcover" ? "Bản mềm" : "Bản cứng"}

            
            
          .inner-card
          
      .row
        .col-12
          .inner-information
            .inner-text
              <span> <b>Mô tả:</b> !{book.description}
  
